                                        <Label Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Marker:" />
                                        <DockPanel  Grid.Row="2"  Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left">
                                            <RadioButton Content="Brand" Margin="5" IsChecked="{Binding Path=Ocr_Stichwort3MarkerB}" ToolTip="{Binding Path=., Converter={StaticResource DisplayAttributeConverter}, ConverterParameter=Ocr_Stichwort3MarkerB}" />
                                            <RadioButton Content="THL" Margin="5" IsChecked="{Binding Path=Ocr_Stichwort3MarkerTHL}" ToolTip="{Binding Path=., Converter={StaticResource DisplayAttributeConverter}, ConverterParameter=Ocr_Stichwort3MarkerTHL}" />
                                            <RadioButton Content="Sonstiges" Margin="5" IsChecked="{Binding Path=Ocr_Stichwort3MarkerSO}" ToolTip="{Binding Path=., Converter={StaticResource DisplayAttributeConverter}, ConverterParameter=Ocr_Stichwort3MarkerSO}" />
                                        </DockPanel>
                                    </Grid>
                                </Border>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </DockPanel>
            </Grid>
        </TabItem>

        <TabItem Header="Filter" Background="{x:Null}" Width="150" Height="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid Grid.Row="0" Margin="5" Name="gridFilter" HeadersVisibility="Column" ItemsSource="{Binding FilterList}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Aktion" Binding="{Binding Path=Action.Name}" Width="*" />
                        <DataGridTextColumn Header="Ausdruck 1" Binding="{Binding Path=Expression1}" Width="*" />
                        <DataGridTextColumn Header="Ausdruck 2" Binding="{Binding Path=Expression2}" Width="*" />
                        <DataGridTextColumn Header="Feld" Binding="{Binding Path=Field.Name}" Width="*" />
                        <DataGridTemplateColumn Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <Button Command="{Binding DataContext.RemoveFilterCommand, ElementName=gridFilter}" CommandParameter="{Binding Path=.}" Width="25" Height="25" >
                                            <Image Source="/Resources/Image.Delete.png" Width="25" Height="25"/> 
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <Button Grid.Row="1" Height="35" Margin="5" Content="Filter hinzufügen" Command="{Binding Path=AddFilterCommand}" />
            </Grid>
        </TabItem>

        <TabItem Header="AAO" Background="{x:Null}" Width="150" Height="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid Grid.Row="0" Margin="5" Name="gridAao" HeadersVisibility="Column" ItemsSource="{Binding AaoList}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Path=Name}" Width="*" />
                        <DataGridTextColumn Header="Bedingung" Binding="{Binding Path=Condition.Name}" Width="*" />
                        <DataGridTextColumn Header="Ausdruck" Binding="{Binding Path=Expression}" Width="*" />
                        <DataGridTemplateColumn Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <Button Command="{Binding DataContext.RemoveAaoCommand, ElementName=gridAao}" CommandParameter="{Binding Path=.}" Width="25" Height="25" >
                                            <Image Source="/Resources/Image.Delete.png" Width="25" Height="25"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <Button Grid.Row="1" Height="35" Margin="5" Content="Regel hinzufügen" Command="{Binding Path=AddAaoCommand}" />
            </Grid>
        </TabItem>
    </TabControl>
</UserControl>