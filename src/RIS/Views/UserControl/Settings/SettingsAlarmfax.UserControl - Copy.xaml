                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Suchtext:" />
                                        <TextBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="{Binding Path=Ocr_Absender, UpdateSourceTrigger=PropertyChanged}" ToolTip="{Binding Path=., Converter={StaticResource DisplayAttributeConverter}, ConverterParameter=Ocr_Absender}" />
                                    </Grid>
                                </Border>

                                <Label Grid.Row="2" Content="Schlagwort" Background="{StaticResource ColorbrushLight}" Margin="0,5,0,0"/>
