<UserControl x:Class="RIS.Views.SettingsAlarmfaxUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800"
    
             xmlns:local="clr-namespace:RIS"   
             xmlns:views="clr-namespace:RIS.Views" 
             xmlns:viewModels="clr-namespace:RIS.ViewModels"         
             
             DataContext="{Binding SettingsAlarmfaxVM, Source={StaticResource ViewModelLocator}}">

    <TabControl Background="{x:Null}" TabStripPlacement="Left">
        <TabControl.Resources>
            <Style TargetType="TabItem">
                <Setter Property="HeaderTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <TextBlock TextWrapping="Wrap" Text="{TemplateBinding Content}" IsEnabled="True" Background="#00000000" TextAlignment="Center" />
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </TabControl.Resources>

        <TabItem Header="Allgemein" Background="{x:Null}" Width="150" Height="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Ordner -->
                <Label Grid.Row="0" Content="Ordner" Background="{StaticResource ColorbrushLight}" />
                <Border Grid.Row="1" BorderBrush="{StaticResource ColorbrushLight}" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="4*" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0"  Content="Faxeingang:" HorizontalAlignment="Right" VerticalAlignment="Center" />
                        <DockPanel Grid.Row="0" Grid.Column="1" Margin="5">
                            <Button DockPanel.Dock="Right" Content="..."  Command="{Binding Path=Fax_PathInputBrowseCommand}" />
                            <TextBox HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="{Binding Path=Fax_PathInput, UpdateSourceTrigger=PropertyChanged}" ToolTip="{Binding Path=., Converter={StaticResource DisplayAttributeConverter}, ConverterParameter=Fax_PathInput}" />
                        </DockPanel>

                        <Label Grid.Row="1" Grid.Column="0"  Content="Faxarchiv:" HorizontalAlignment="Right" VerticalAlignment="Center"  />
                        <DockPanel Grid.Row="1" Grid.Column="1" Margin="5">
                            <Button DockPanel.Dock="Right" Content="..." Command="{Binding Path=Fax_PathArchiveBrowseCommand}" />
                            <TextBox HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="{Binding Path=Fax_PathArchive, UpdateSourceTrigger=PropertyChanged}" ToolTip="{Binding Path=., Converter={StaticResource DisplayAttributeConverter}, ConverterParameter=Fax_PathArchive}" />
                        </DockPanel>
                    </Grid>
                </Border>

                <!-- E-Mail -->
                <Label Grid.Row="2" Content="E-Mail" Background="{StaticResource ColorbrushLight}" Margin="0,5,0,0" Visibility="{Binding Path=License_IsMailOn, Converter={StaticResource BoolToVisibilityConverter}}"/>
                <Border Grid.Row="3" BorderBrush="{StaticResource ColorbrushLight}" BorderThickness="1" Visibility="{Binding Path=License_IsMailOn, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Content="IMAP-Server:" />
                        <TextBox Grid.Row="0" Grid.Column="1" Margin="5" Text="{Binding Path=MailInput_Server, UpdateSourceTrigger=PropertyChanged}" ToolTip="{Binding Path=., Converter={StaticResource DisplayAttributeConverter}, ConverterParameter=MailInput_Server}" />
                        <CheckBox Grid.Row="0" Grid.Column="2" Margin="5" Content="SSL" IsChecked="{Binding Path=MailInput_SSL}" ToolTip="{Binding Path=., Converter={StaticResource DisplayAttributeConverter}, ConverterParameter=MailInput_SSL}" />

                        <Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Port:" />
                        <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Text="{Binding Path=MailInput_Port, UpdateSourceTrigger=PropertyChanged}" ToolTip="{Binding Path=., Converter={StaticResource DisplayAttributeConverter}, ConverterParameter=MailInput_Port}" />

                        <Label Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Benutzer:" />
                        <TextBox Grid.Row="2" Grid.Column="1" Margin="5" Text="{Binding Path=MailInput_User, UpdateSourceTrigger=PropertyChanged}" ToolTip="{Binding Path=., Converter={StaticResource DisplayAttributeConverter}, ConverterParameter=MailInput_User}" />

                        <Label Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Passwort:" />
                        <TextBox Grid.Row="3" Grid.Column="1" Margin="5" Text="{Binding Path=MailInput_Password, UpdateSourceTrigger=PropertyChanged}" ToolTip="{Binding Path=., Converter={StaticResource DisplayAttributeConverter}, ConverterParameter=MailInput_Password}" />

                        <Label Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Betreff:" />
                        <TextBox Grid.Row="4" Grid.Column="1" Margin="5" Text="{Binding Path=MailInput_Subject, UpdateSourceTrigger=PropertyChanged}" ToolTip="{Binding Path=., Converter={StaticResource DisplayAttributeConverter}, ConverterParameter=MailInput_Subject}" />
                    </Grid>
                </Border>
            </Grid>
        </TabItem>

