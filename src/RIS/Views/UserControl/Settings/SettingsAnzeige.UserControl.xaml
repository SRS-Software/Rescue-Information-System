                                    <xctk:DropDownButton.DropDownContent>
                                        <StackPanel>
                                            <xctk:ColorPicker Margin="5" HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              SelectedColor="{Binding Color, Converter={StaticResource BrushToColorConverter}}"
                                                              DisplayColorAndName="True" />
                                            <CheckBox Margin="5,0,5,5" Content="Hauptfenster"
