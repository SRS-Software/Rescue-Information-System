<UserControl
    x:Class="RIS.Views.SettingsAnzeigeUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"

    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"

    mc:Ignorable="d"
    d:DesignHeight="550" d:DesignWidth="800">

    <TabControl Background="{x:Null}" TabStripPlacement="Left">
        <TabControl.Resources>
            <Style TargetType="TabItem">
                <Setter Property="HeaderTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <TextBlock TextWrapping="Wrap" Text="{TemplateBinding Content}" IsEnabled="True"
                                       Background="{x:Null}" TextAlignment="Center" />
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </TabControl.Resources>

        <TabItem Header="Allgemein" Background="{x:Null}" Width="150" Height="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!-- Schriftfarbe -->
                <Label Grid.Row="0" Grid.Column="0" Content="Schriftfarbe"
                       Background="{StaticResource ColorbrushLight}" />
                <Border Grid.Row="1" Grid.Column="0" BorderBrush="{StaticResource ColorbrushLight}" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="5" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="5" />
                        </Grid.ColumnDefinitions>
                        <Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"
                               Content="Schriftfarbe:" />
                        <xctk:ColorPicker Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch"
                                          VerticalAlignment="Center"
                                          SelectedColor="{Binding Path=ForegroundColor, Converter={StaticResource DrawingColorToSolidColorConverter}}"
                                          DisplayColorAndName="True" />
                    </Grid>
                </Border>

                <!-- Rebbot -->
                <Label Grid.Row="3" Grid.Column="0" Content="Neustart" Background="{StaticResource ColorbrushLight}" />
                <Border Grid.Row="4" Grid.Column="0" BorderBrush="{StaticResource ColorbrushLight}" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="5" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="5" />
                        </Grid.ColumnDefinitions>

                        <CheckBox Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"
                                  Content="Automatischer Neustart um 0 Uhr" IsChecked="{Binding Path=Reboot_On}"
                                  ToolTip="{Binding Path=., Converter={StaticResource DisplayAttributeConverter}, ConverterParameter=Reboot_On}" />
                    </Grid>
                </Border>
            </Grid>
        </TabItem>

        <TabItem Header="Hauptfenster" Background="{x:Null}" Width="150" Height="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Grid.Column="0" BorderBrush="{StaticResource ColorbrushLight}" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="5" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="4*" />
                            <ColumnDefinition Width="5" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"
                               Content="Pager:" />
                        <CheckBox Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                  Content="Neue Meldung an erster Stelle"
                                  IsChecked="{Binding Path=Pagers_InsertItem, UpdateSourceTrigger=PropertyChanged}"
                                  ToolTip="{Binding Path=., Converter={StaticResource DisplayAttributeConverter}, ConverterParameter=Pagers_InsertItem}" />
                    </Grid>
                </Border>

                <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Content="Ticker"
                       Background="{StaticResource ColorbrushLight}" />
                <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="{StaticResource ColorbrushLight}"
                        BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="5" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="4*" />
                            <ColumnDefinition Width="5" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"
                               Content="Text:" />
                        <DockPanel Grid.Row="1" Grid.Column="1">
                            <Button DockPanel.Dock="Right" Content="..."
                                    Command="{Binding Path=Ticker_FileBrowseCommand}" />
                            <TextBox HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                     Text="{Binding Path=Ticker_Text, UpdateSourceTrigger=PropertyChanged}"
                                     ToolTip="{Binding Path=., Converter={StaticResource DisplayAttributeConverter}, ConverterParameter=Ticker_Text}" />
                        </DockPanel>

                        <Label Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"
                               Content="Geschwindigkeit:" />
                        <Slider Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Minimum="10" Maximum="1000"
                                Value="{Binding Path=Ticker_Speed, UpdateSourceTrigger=PropertyChanged}"
                                ToolTip="{Binding Path=., Converter={StaticResource DisplayAttributeConverter}, ConverterParameter=Ticker_Speed}"
                                Interval="100" LargeChange="50" SmallChange="1" />

                    </Grid>
                </Border>

                <Label Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Content="Pegelstand"
                       Background="{StaticResource ColorbrushLight}" />
                <Border Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="{StaticResource ColorbrushLight}"
                        BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="5" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="4*" />
                            <ColumnDefinition Width="5" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"
                               Content="Anbieter:" />
                        <ComboBox Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                  ItemsSource="{Binding Riverlevel_ModeList}"
                                  SelectedItem="{Binding Path=Riverlevel_Mode, UpdateSourceTrigger=PropertyChanged}"
                                  ToolTip="{Binding Path=., Converter={StaticResource DisplayAttributeConverter}, ConverterParameter=Riverlevel_Mode}" />

                        <Label Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"
                               Content="Messstellen-Nr.:" />
                        <TextBox Grid.Row="3" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                 Text="{Binding Path=Riverlevel_Messstelle, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="{Binding Path=., Converter={StaticResource DisplayAttributeConverter}, ConverterParameter=Riverlevel_Messstelle}" />
                    </Grid>
                </Border>

                <Label Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Content="DWD-GeoWebservice"
                       Background="{StaticResource ColorbrushLight}" />
                <Border Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2"
                        BorderBrush="{StaticResource ColorbrushLight}" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="5" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="5" />
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                 Text="{Binding Path=Warnweather_Url, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="{Binding Path=., Converter={StaticResource DisplayAttributeConverter}, ConverterParameter=Warnweather_Url}"
                                 AcceptsReturn="True" AcceptsTab="True" HorizontalScrollBarVisibility="Auto"
                                 IsManipulationEnabled="True" VerticalScrollBarVisibility="Auto" />
                    </Grid>
                </Border>
            </Grid>
        </TabItem>

        <TabItem Header="Alarmfenster" Background="{x:Null}" Width="150" Height="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="1" Content="Allgemein" Background="{StaticResource ColorbrushLight}" />
                <Border Grid.Row="1" Grid.Column="1" BorderBrush="{StaticResource ColorbrushLight}" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="5" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="5" />
                        </Grid.ColumnDefinitions>

                        <CheckBox Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"
                                  Content="Einsatzmittel mit Statusbox" IsChecked="{Binding Path=Vehicles_Statusbox}"
                                  ToolTip="{Binding Path=., Converter={StaticResource DisplayAttributeConverter}, ConverterParameter=Vehicles_Statusbox}" />
                        <CheckBox Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"
                                  Content="Einsatzmittel bei Status disponieren"
                                  IsChecked="{Binding Path=Vehicles_AutoDisponieren}"
                                  ToolTip="{Binding Path=., Converter={StaticResource DisplayAttributeConverter}, ConverterParameter=Vehicles_AutoDisponieren}" />
                        <CheckBox Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"
                                  Content="Datei bei Status C ausführen" IsChecked="{Binding Path=AppExecute_OnStatus}"
                                  ToolTip="{Binding Path=., Converter={StaticResource DisplayAttributeConverter}, ConverterParameter=AppExecute_OnStatus}" />
                    </Grid>
                </Border>
            </Grid>
        </TabItem>

        <TabItem Header="Monitor" Background="{x:Null}" Width="150" Height="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Allgemein -->
                <Border Grid.Row="1" BorderBrush="{StaticResource ColorbrushLight}" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="5" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="5" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"
                               Content="Einsatzanzeigezeit:" />
                        <xctk:TimeSpanUpDown Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left"
                                             VerticalAlignment="Center" Watermark="Enter text" DefaultValue="00:00:00"
                                             Value="{Binding Monitor_AlarmTime}"
                                             ToolTip="{Binding Path=., Converter={StaticResource DisplayAttributeConverter}, ConverterParameter=Monitor_AlarmTime}"
                                             CultureInfo="de-DE" />

                        <Label Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"
                               Content="Verzögerung nach einem Einsatz:" />
                        <xctk:TimeSpanUpDown Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left"
                                             VerticalAlignment="Center" Watermark="Enter text" DefaultValue="00:00:00"
                                             Value="{Binding Monitor_AlarmDelayTime}"
                                             ToolTip="{Binding Path=., Converter={StaticResource DisplayAttributeConverter}, ConverterParameter=Monitor_AlarmDelayTime}"
                                             CultureInfo="de-DE" />

                        <Label Grid.Row="5" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"
                               Content="Wake-Up bei Status:" />
                        <xctk:TimeSpanUpDown Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left"
                                             VerticalAlignment="Center" Watermark="Enter text" DefaultValue="00:00:00"
                                             Value="{Binding Monitor_WakeupStatusTime}"
                                             ToolTip="{Binding Path=., Converter={StaticResource DisplayAttributeConverter}, ConverterParameter=Monitor_WakeupStatusTime}"
                                             CultureInfo="de-DE" />

                        <Label Grid.Row="7" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"
                               Content="Wake-Up bei Alarmierung:" />
                        <xctk:TimeSpanUpDown Grid.Row="7" Grid.Column="1" HorizontalAlignment="Left"
                                             VerticalAlignment="Center" Watermark="Enter text" DefaultValue="00:00:00"
                                             Value="{Binding Monitor_WakeupAlarmTime}"
                                             ToolTip="{Binding Path=., Converter={StaticResource DisplayAttributeConverter}, ConverterParameter=Monitor_WakeupAlarmTime}"
                                             CultureInfo="de-DE" />

                        <Label Grid.Row="9" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"
                               Content="Zeitplan deaktivieren" />
                        <CheckBox Grid.Row="9" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"
                                  IsChecked="{Binding Path=Monitor_WeekplanDisabled}"
                                  ToolTip="{Binding Path=., Converter={StaticResource DisplayAttributeConverter}, ConverterParameter=Monitor_WeekplanDisabled}" />
                    </Grid>
                </Border>

                <!-- Zeitplan -->
                <Border Grid.Row="3" BorderBrush="{StaticResource ColorbrushLight}" BorderThickness="1">
                    <Grid
                        IsEnabled="{Binding Path=Monitor_WeekplanDisabled, Converter={StaticResource InvertBooleanConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0" Content="Montag" Background="{StaticResource ColorbrushLight}"
                                   Margin="0,5,0,0" HorizontalContentAlignment="Center" />

                            <DataGrid Grid.Row="1" Name="gridWeekplanMonday" HeadersVisibility="None"
                                      ItemsSource="{Binding MonitorSettings.Monday}">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock>
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}{0:HH:mm}-{1:HH:mm}">
                                                            <Binding Path="Start" />
                                                            <Binding Path="Stop" />
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Width="Auto">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Background="{x:Null}"
                                                        Command="{Binding DataContext.DeleteTimeMondayCommand, ElementName=gridWeekplanMonday}"
                                                        CommandParameter="{Binding Path=.}">
                                                    <Image Source="/Resources/Image.Delete.png" Width="25" Height="25" />
                                                </Button>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <Button Grid.Row="2" Margin="0" Command="{Binding AddTimeMondayCommand}">
                                <StackPanel>
                                    <TextBlock Text="Zeit" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    <TextBlock Text="hinzufügen" HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>
                        </Grid>

                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0" Content="Dienstag" Background="{StaticResource ColorbrushLight}"
                                   Margin="0,5,0,0" HorizontalContentAlignment="Center" />

                            <DataGrid Grid.Row="1" Name="gridWeekplanTuesday" HeadersVisibility="None"
                                      ItemsSource="{Binding MonitorSettings.Tuesday}">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock>
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}{0:HH:mm}-{1:HH:mm}">
                                                            <Binding Path="Start" />
                                                            <Binding Path="Stop" />
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Width="Auto">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Background="{x:Null}"
                                                        Command="{Binding DataContext.DeleteTimeTuesdayCommand, ElementName=gridWeekplanTuesday}"
                                                        CommandParameter="{Binding Path=.}">
                                                    <Image Source="/Resources/Image.Delete.png" Width="25" Height="25" />
                                                </Button>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <Button Grid.Row="2" Margin="0" Command="{Binding AddTimeTuesdayCommand}">
                                <StackPanel>
                                    <TextBlock Text="Zeit" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    <TextBlock Text="hinzufügen" HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>
                        </Grid>

                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0" Content="Mittwoch" Background="{StaticResource ColorbrushLight}"
                                   Margin="0,5,0,0" HorizontalContentAlignment="Center" />

                            <DataGrid Grid.Row="1" Name="gridWeekplanWednesday" HeadersVisibility="None"
                                      ItemsSource="{Binding MonitorSettings.Wednesday}">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock>
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}{0:HH:mm}-{1:HH:mm}">
                                                            <Binding Path="Start" />
                                                            <Binding Path="Stop" />
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Width="Auto">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Background="{x:Null}"
                                                        Command="{Binding DataContext.DeleteTimeWednesdayCommand, ElementName=gridWeekplanWednesday}"
                                                        CommandParameter="{Binding Path=.}">
                                                    <Image Source="/Resources/Image.Delete.png" Width="25" Height="25" />
                                                </Button>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <Button Grid.Row="2" Margin="0" Command="{Binding AddTimeWednesdayCommand}">
                                <StackPanel>
                                    <TextBlock Text="Zeit" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    <TextBlock Text="hinzufügen" HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>
                        </Grid>

                        <Grid Grid.Column="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0" Content="Donnerstag" Background="{StaticResource ColorbrushLight}"
                                   Margin="0,5,0,0" HorizontalContentAlignment="Center" />

                            <DataGrid Grid.Row="1" Name="gridWeekplanThursday" HeadersVisibility="None"
                                      ItemsSource="{Binding MonitorSettings.Thursday}">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock>
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}{0:HH:mm}-{1:HH:mm}">
                                                            <Binding Path="Start" />
                                                            <Binding Path="Stop" />
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Width="Auto">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Background="{x:Null}"
                                                        Command="{Binding DataContext.DeleteTimeThursdayCommand, ElementName=gridWeekplanThursday}"
                                                        CommandParameter="{Binding Path=.}">
                                                    <Image Source="/Resources/Image.Delete.png" Width="25" Height="25" />
                                                </Button>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <Button Grid.Row="2" Margin="0" Command="{Binding AddTimeThursdayCommand}">
                                <StackPanel>
                                    <TextBlock Text="Zeit" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    <TextBlock Text="hinzufügen" HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>
                        </Grid>

                        <Grid Grid.Column="4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0" Content="Freitag" Background="{StaticResource ColorbrushLight}"
                                   Margin="0,5,0,0" HorizontalContentAlignment="Center" />

                            <DataGrid Grid.Row="1" Name="gridWeekplanFriday" HeadersVisibility="None"
                                      ItemsSource="{Binding MonitorSettings.Friday}">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock>
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}{0:HH:mm}-{1:HH:mm}">
                                                            <Binding Path="Start" />
                                                            <Binding Path="Stop" />
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Width="Auto">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Background="{x:Null}"
                                                        Command="{Binding DataContext.DeleteTimeFridayCommand, ElementName=gridWeekplanFriday}"
                                                        CommandParameter="{Binding Path=.}">
                                                    <Image Source="/Resources/Image.Delete.png" Width="25" Height="25" />
                                                </Button>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <Button Grid.Row="2" Margin="0" Command="{Binding AddTimeFridayCommand}">
                                <StackPanel>
                                    <TextBlock Text="Zeit" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    <TextBlock Text="hinzufügen" HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>
                        </Grid>

                        <Grid Grid.Column="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0" Content="Samstag" Background="{StaticResource ColorbrushLight}"
                                   Margin="0,5,0,0" HorizontalContentAlignment="Center" />

                            <DataGrid Grid.Row="1" Name="gridWeekplanSaturday" HeadersVisibility="None"
                                      ItemsSource="{Binding MonitorSettings.Saturday}">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock>
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}{0:HH:mm}-{1:HH:mm}">
                                                            <Binding Path="Start" />
                                                            <Binding Path="Stop" />
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Width="Auto">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Background="{x:Null}"
                                                        Command="{Binding DataContext.DeleteTimeSaturdayCommand, ElementName=gridWeekplanSaturday}"
                                                        CommandParameter="{Binding Path=.}">
                                                    <Image Source="/Resources/Image.Delete.png" Width="25" Height="25" />
