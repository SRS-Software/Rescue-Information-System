                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </TabItem>

        <TabItem Header="Fahrzeuge" Background="{x:Null}" Width="150" Height="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <DataGrid Grid.Row="0" Name="gridVehicle" HeadersVisibility="Column"
                          ItemsSource="{Binding VehicleList}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Path=Name}" Width="*" />
                        <DataGridTextColumn Header="Anzeigetext" Binding="{Binding Path=ViewText}" Width="*" />
                        <DataGridTextColumn Header="Einsatzmittel" Binding="{Binding Path=FaxText}" Width="*" />
                        <DataGridTextColumn Header="BOS-Kennung" Binding="{Binding Path=BosIdentifier}" Width="Auto" />
                        <DataGridTemplateColumn Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Background="{x:Null}"
                                                Command="{Binding DataContext.EditVehicleCommand, ElementName=gridVehicle}"
                                                CommandParameter="{Binding Path=.}">
                                            <Image Source="/Resources/Image.Edit.png" Width="25" Height="25" />
                                        </Button>
                                        <Button Background="{x:Null}"
                                                Command="{Binding DataContext.DeleteVehicleCommand, ElementName=gridVehicle}"
                                                CommandParameter="{Binding Path=.}">
                                            <Image Source="/Resources/Image.Delete.png" Width="25" Height="25" />
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <Button Grid.Row="1" Height="35" Content="Fahrzeug hinzufügen"
                        Command="{Binding Path=AddVehicleCommand}" />

                <Button Grid.Row="3" Height="35" Content="Import aus FMS32"
                        Command="{Binding Path=ImportVehicleCommand}" />
            </Grid>
        </TabItem>
    </TabControl>
</UserControl>