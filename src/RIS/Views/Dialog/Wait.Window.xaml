<Window
    x:Class="RIS.Views.WaitWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:RIS.Views"

    Title="RIS - Wait"
    WindowStartupLocation="CenterScreen" WindowStyle="None" ShowInTaskbar="False" HorizontalAlignment="Center"
    VerticalAlignment="Center" ResizeMode="NoResize" Width="350" Height="350" Foreground="{x:Null}"
    AllowsTransparency="True">

    <Window.Background>
        <SolidColorBrush />
    </Window.Background>
    <Grid>
        <Viewbox Margin="60">
            <Label FontSize="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="WAIT"
                   DockPanel.Dock="Top" FontFamily="Eras ITC" Foreground="Black" FontWeight="Bold">
                <Label.Effect>
                    <DropShadowEffect ShadowDepth="7" Direction="350" Color="#FFA0A0A0" BlurRadius="7" />
                </Label.Effect>
            </Label>
        </Viewbox>
        <Viewbox Margin="20">
            <views:LoadingControl HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15"
                                  Foreground="Black" />
        </Viewbox>
    </Grid>
</Window>